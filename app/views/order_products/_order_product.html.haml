.media.mb-3
  %a.mr-3{href:'#'}
    - product = order_product.product
    = image_tag product.image.to_s, size: '100x100'
  .media-body
    %h5.mt-0
      = product.name
    %div
      = "#{product.price}円"
    %div
      = "#{order_product.number}個"
    - if delete_flg
      .float-right
        = link_to '削除する', order_product_path(order_product), method: :delete
