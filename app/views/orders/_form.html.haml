-# frozen_string_literal: true
= simple_form_for(@order) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :references
    = f.input :name
    = f.input :address
    = f.input :send_date
    = f.input :send_timeframe
    = f.input :total_fee

  .form-actions
    = f.button :submit
