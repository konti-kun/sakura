%h1 ユーザ一覧
%table.table
  %thead
    %tr
      %th email
      %th name
      %th address
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.name
        %td= user.address
        %td= link_to '編集', edit_admin_user_path(user)
        %td= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか?' }

%br
.row.mt-4.justify-content-center
  = paginate @users
